@page
@model RecruitCatSeitzme.Pages.Candidates.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Candidates</h1>

<p>
    <a asp-page="Create">Create New Candidate</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].ResumeUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].CoverLetter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].ApplicationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].TargetStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].Industry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Candidate) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResumeUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverLetter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry.IndustryName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CandidateId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CandidateId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CandidateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
