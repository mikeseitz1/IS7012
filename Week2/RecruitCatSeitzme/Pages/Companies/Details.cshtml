@page
@model RecruitCatSeitzme.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Company Details</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyPhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.JobId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.JobId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PositionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PositionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.JobLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.JobLocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.JobStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.JobStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.SalaryMax)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.SalaryMax)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.SalaryMin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.SalaryMin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.IndustryName)
        </dd>
    </dl>
</div>
<h2> Candidates</h2>
@if (Model.Candidates != null && Model.Candidates.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Candidates[0].FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Candidates[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Candidates[0].PhoneNumber)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Candidates)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-page="/Candidates/Details" asp-route-id="@item.CandidateId">Details</a> |
                    <a asp-page="/Candidates/Edit" asp-route-id="@item.CandidateId">Edit</a> |
                    <a asp-page="/Candidates/Delete" asp-route-id="@item.CandidateId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No candidates found for this company.</p>
}
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.CompanyId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
