@page
@model BankMe.Pages.AccountHolders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Account Holder Details</h1>

<div>
    <h4>AccountHolders</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountHolder.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountHolder.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountHolder.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountHolder.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountHolder.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountHolder.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountHolder.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountHolder.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountHolder.StreetAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountHolder.StreetAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountHolder.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountHolder.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountHolder.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountHolder.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountHolder.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountHolder.ZipCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountHolder.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountHolder.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountHolder.SocialSecurityNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountHolder.SocialSecurityNumber)
        </dd>
    </dl>
</div>
@if (Model.AccountHolder.BankAccounts != null && Model.AccountHolder.BankAccounts.Any())
{
    <h4>Accounts</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Account Number")
                </th>
                <th>
                    @Html.DisplayName("Account Type")
                </th>                
                <th>
                    @Html.DisplayName("Balance")
                </th>               
                
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.AccountHolder.BankAccounts)
        {
            <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountType)
                    </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    <a asp-page="/BankAccounts/Details" asp-route-id="@item.AccountHolderId">Details</a>
                </td>
            </tr>
 
        }
            <tr>
                <th>
                    Total Balance
                </th>
                <th>
                    @Model.AccountHolder.BankAccounts.Sum(x => x.Balance).ToString("C2")
                </th>
            </tr>
        </tbody>
    </table>
}
else
{
    <div class="alert-warning"> No Accounts are known for this person. </div>
}

<div>
    <a asp-page="./Edit" asp-route-id="@Model.AccountHolder.AccountHolderId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
